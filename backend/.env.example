# Backend Environment Variables
# Copy this to .env and fill in your values

PORT=5000
NODE_ENV=development

# Database - Get from your PostgreSQL provider (Render, Neon, Supabase, etc.)
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT Secret - Generate a strong random string
JWT_SECRET=your-super-secret-jwt-key-change-this

# OpenAI - Get from https://platform.openai.com/api-keys
OPENAI_KEY=sk-your-openai-key

# Stripe - Get from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Frontend URL for Stripe redirects
FRONTEND_URL=http://localhost:3000

# SMTP Configuration for sending receipts (optional)
# Get from your email provider (Gmail, SendGrid, Mailgun, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=SmartBiz <noreply@smartbiz.sl>
